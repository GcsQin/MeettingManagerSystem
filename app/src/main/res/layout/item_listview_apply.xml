<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="逸夫楼602"
        android:textColor="#180808"
        android:textSize="@dimen/textsize"
        android:id="@+id/tv_item_apply_build"
        />
    <TextView
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/tv_item_apply_build"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请人：ChumFuchiu"
        android:textColor="#180808"
        android:id="@+id/tv_item_apply_user"
        />
    <TextView
        android:id="@+id/tv_item_apply_reason"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/tv_item_apply_build"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:ellipsize="end"
        android:textSize="@dimen/tipsize"
        android:textColor="#707070"
        android:text="555555555555555555555555555555555555555555555555555555555555555555555555555555555555555555555555555555555555555555555"
        />
    <TextView
        android:layout_marginTop="6dp"
        android:id="@+id/tv_item_apply_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_apply_reason"
        android:textColor="#707070"
        android:text="申请时间：2017-66-66"
        />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#707070"
        android:layout_below="@+id/tv_item_apply_time"
        />
</RelativeLayout>
