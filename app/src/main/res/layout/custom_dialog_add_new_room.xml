<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C3E3F"
    >
    <TextView
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加新教室"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/bigtitlesize"
        android:textColor="@color/colorBlue"
        android:id="@+id/tv_addnew_title"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_addnew_title"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="@dimen/margin_16"
        android:orientation="vertical"
        >
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/sp_addnew_room"
            >
        </Spinner>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#6c6868"
            android:hint="教室号"
            android:textSize="@dimen/appbarsize"
            android:id="@+id/et_addnew_roomnum"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#6c6868"
            android:hint="教室资源信息"
            android:textSize="@dimen/appbarsize"
            android:id="@+id/et_addnew_source"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#6c6868"
            android:hint="教室容量"
            android:inputType="number"
            android:id="@+id/et_addnew_size"
            android:textSize="@dimen/appbarsize"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_update_btn_blue"
            android:text="点击添加"
            android:textSize="@dimen/buttonsize"
            android:textColor="#ffffff"
            android:layout_marginBottom="16dp"
            android:id="@+id/btn_add_roomInfo"
            />
    </LinearLayout>

</RelativeLayout>
