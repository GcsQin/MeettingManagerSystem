<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLoginBack"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="@dimen/bigtitlesize"
        android:text="注册账号"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/register_reg"
        />
    <LinearLayout
        android:layout_below="@+id/register_reg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        >
        <TextView
            style="@style/RegisterTextView"
            android:text="账号"
            />
        <EditText
            style="@style/RegisterEditText"
            android:hint="（必填）"
            android:id="@+id/register_user"
            />
        <TextView
            style="@style/RegisterTextView"
            android:text="密码"
            />
        <EditText
            style="@style/RegisterEditText"
            android:hint="（必填）"
            android:inputType="textPassword"
            android:id="@+id/register_pass"
            />
        <TextView
            style="@style/RegisterTextView"
            android:text="手机号码"
            />
        <EditText
            style="@style/RegisterEditText"
            android:hint="（必填）"
            android:id="@+id/register_phone"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="#ffffff"
                android:onClick="getSmsVerify"
                android:id="@+id/register_btn_yanz"
                android:textSize="@dimen/buttonsize"
                android:background="@drawable/shape_login_btn"
                />
            <EditText
                style="@style/RegisterEditText"
                android:hint="请输入验证码"
                android:id="@+id/register_yanz"
                />
        </LinearLayout>
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_login_btn"
            android:text="注册"
            android:onClick="registerUser"
            android:textColor="#ffffff"
            />
    </LinearLayout>
    <TextView
        android:onClick="xxxItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/selector_white"
        android:text="@string/xxx"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/smalltitlesize"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        />
</RelativeLayout>
